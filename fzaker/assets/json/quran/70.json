[
{
    "id": "5376",
    "sura": "70",
    "VerseIDAr": "1",
    "ayat": "بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ سَأَلَ سَائِلٌ بِعَذَابٍ وَاقِعٍ"
},
{
    "id": "5377",
    "sura": "70",
    "VerseIDAr": "2",
    "ayat": "لِلْكَافِرِينَ لَيْسَ لَهُ دَافِعٌ"
},
{
    "id": "5378",
    "sura": "70",
    "VerseIDAr": "3",
    "ayat": "مِنَ اللَّهِ ذِي الْمَعَارِجِ"
},
{
    "id": "5379",
    "sura": "70",
    "VerseIDAr": "4",
    "ayat": "تَعْرُجُ الْمَلَائِكَةُ وَالرُّوحُ إِلَيْهِ فِي يَوْمٍ كَانَ مِقْدَارُهُ خَمْسِينَ أَلْفَ سَنَةٍ"
},
{
    "id": "5380",
    "sura": "70",
    "VerseIDAr": "5",
    "ayat": "فَاصْبِرْ صَبْرًا جَمِيلًا"
},
{
    "id": "5381",
    "sura": "70",
    "VerseIDAr": "6",
    "ayat": "إِنَّهُمْ يَرَوْنَهُ بَعِيدًا"
},
{
    "id": "5382",
    "sura": "70",
    "VerseIDAr": "7",
    "ayat": "وَنَرَاهُ قَرِيبًا"
},
{
    "id": "5383",
    "sura": "70",
    "VerseIDAr": "8",
    "ayat": "يَوْمَ تَكُونُ السَّمَاءُ كَالْمُهْلِ"
},
{
    "id": "5384",
    "sura": "70",
    "VerseIDAr": "9",
    "ayat": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ"
},
{
    "id": "5385",
    "sura": "70",
    "VerseIDAr": "10",
    "ayat": "وَلَا يَسْأَلُ حَمِيمٌ حَمِيمًا"
},
{
    "id": "5386",
    "sura": "70",
    "VerseIDAr": "11",
    "ayat": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ الْمُجْرِمُ لَوْ يَفْتَدِي مِنْ عَذَابِ يَوْمِئِذٍ بِبَنِيهِ"
},
{
    "id": "5387",
    "sura": "70",
    "VerseIDAr": "12",
    "ayat": "وَصَاحِبَتِهِ وَأَخِيهِ"
},
{
    "id": "5388",
    "sura": "70",
    "VerseIDAr": "13",
    "ayat": "وَفَصِيلَتِهِ الَّتِي تُؤْوِيهِ"
},
{
    "id": "5389",
    "sura": "70",
    "VerseIDAr": "14",
    "ayat": "وَمَنْ فِي الْأَرْضِ جَمِيعًا ثُمَّ يُنْجِيهِ"
},
{
    "id": "5390",
    "sura": "70",
    "VerseIDAr": "15",
    "ayat": "كَلَّا ۖ إِنَّهَا لَظَىٰ"
},
{
    "id": "5391",
    "sura": "70",
    "VerseIDAr": "16",
    "ayat": "نَزَّاعَةً لِلشَّوَىٰ"
},
{
    "id": "5392",
    "sura": "70",
    "VerseIDAr": "17",
    "ayat": "تَدْعُو مَنْ أَدْبَرَ وَتَوَلَّىٰ"
},
{
    "id": "5393",
    "sura": "70",
    "VerseIDAr": "18",
    "ayat": "وَجَمَعَ فَأَوْعَىٰ"
},
{
    "id": "5394",
    "sura": "70",
    "VerseIDAr": "19",
    "ayat": "إِنَّ الْإِنْسَانَ خُلِقَ هَلُوعًا"
},
{
    "id": "5395",
    "sura": "70",
    "VerseIDAr": "20",
    "ayat": "إِذَا مَسَّهُ الشَّرُّ جَزُوعًا"
},
{
    "id": "5396",
    "sura": "70",
    "VerseIDAr": "21",
    "ayat": "وَإِذَا مَسَّهُ الْخَيْرُ مَنُوعًا"
},
{
    "id": "5397",
    "sura": "70",
    "VerseIDAr": "22",
    "ayat": "إِلَّا الْمُصَلِّينَ"
},
{
    "id": "5398",
    "sura": "70",
    "VerseIDAr": "23",
    "ayat": "الَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَائِمُونَ"
},
{
    "id": "5399",
    "sura": "70",
    "VerseIDAr": "24",
    "ayat": "وَالَّذِينَ فِي أَمْوَالِهِمْ حَقٌّ مَعْلُومٌ"
},
{
    "id": "5400",
    "sura": "70",
    "VerseIDAr": "25",
    "ayat": "لِلسَّائِلِ وَالْمَحْرُومِ"
},
{
    "id": "5401",
    "sura": "70",
    "VerseIDAr": "26",
    "ayat": "وَالَّذِينَ يُصَدِّقُونَ بِيَوْمِ الدِّينِ"
},
{
    "id": "5402",
    "sura": "70",
    "VerseIDAr": "27",
    "ayat": "وَالَّذِينَ هُمْ مِنْ عَذَابِ رَبِّهِمْ مُشْفِقُونَ"
},
{
    "id": "5403",
    "sura": "70",
    "VerseIDAr": "28",
    "ayat": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ"
},
{
    "id": "5404",
    "sura": "70",
    "VerseIDAr": "29",
    "ayat": "وَالَّذِينَ هُمْ لِفُرُوجِهِمْ حَافِظُونَ"
},
{
    "id": "5405",
    "sura": "70",
    "VerseIDAr": "30",
    "ayat": "إِلَّا عَلَىٰ أَزْوَاجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَانُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ"
},
{
    "id": "5406",
    "sura": "70",
    "VerseIDAr": "31",
    "ayat": "فَمَنِ ابْتَغَىٰ وَرَاءَ ذَٰلِكَ فَأُولَٰئِكَ هُمُ الْعَادُونَ"
},
{
    "id": "5407",
    "sura": "70",
    "VerseIDAr": "32",
    "ayat": "وَالَّذِينَ هُمْ لِأَمَانَاتِهِمْ وَعَهْدِهِمْ رَاعُونَ"
},
{
    "id": "5408",
    "sura": "70",
    "VerseIDAr": "33",
    "ayat": "وَالَّذِينَ هُمْ بِشَهَادَاتِهِمْ قَائِمُونَ"
},
{
    "id": "5409",
    "sura": "70",
    "VerseIDAr": "34",
    "ayat": "وَالَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ"
},
{
    "id": "5410",
    "sura": "70",
    "VerseIDAr": "35",
    "ayat": "أُولَٰئِكَ فِي جَنَّاتٍ مُكْرَمُونَ"
},
{
    "id": "5411",
    "sura": "70",
    "VerseIDAr": "36",
    "ayat": "فَمَالِ الَّذِينَ كَفَرُوا قِبَلَكَ مُهْطِعِينَ"
},
{
    "id": "5412",
    "sura": "70",
    "VerseIDAr": "37",
    "ayat": "عَنِ الْيَمِينِ وَعَنِ الشِّمَالِ عِزِينَ"
},
{
    "id": "5413",
    "sura": "70",
    "VerseIDAr": "38",
    "ayat": "أَيَطْمَعُ كُلُّ امْرِئٍ مِنْهُمْ أَنْ يُدْخَلَ جَنَّةَ نَعِيمٍ"
},
{
    "id": "5414",
    "sura": "70",
    "VerseIDAr": "39",
    "ayat": "كَلَّا ۖ إِنَّا خَلَقْنَاهُمْ مِمَّا يَعْلَمُونَ"
},
{
    "id": "5415",
    "sura": "70",
    "VerseIDAr": "40",
    "ayat": "فَلَا أُقْسِمُ بِرَبِّ الْمَشَارِقِ وَالْمَغَارِبِ إِنَّا لَقَادِرُونَ"
},
{
    "id": "5416",
    "sura": "70",
    "VerseIDAr": "41",
    "ayat": "عَلَىٰ أَنْ نُبَدِّلَ خَيْرًا مِنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ"
},
{
    "id": "5417",
    "sura": "70",
    "VerseIDAr": "42",
    "ayat": "فَذَرْهُمْ يَخُوضُوا وَيَلْعَبُوا حَتَّىٰ يُلَاقُوا يَوْمَهُمُ الَّذِي يُوعَدُونَ"
},
{
    "id": "5418",
    "sura": "70",
    "VerseIDAr": "43",
    "ayat": "يَوْمَ يَخْرُجُونَ مِنَ الْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ"
},
{
    "id": "5419",
    "sura": "70",
    "VerseIDAr": "44",
    "ayat": "خَاشِعَةً أَبْصَارُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ الْيَوْمُ الَّذِي كَانُوا يُوعَدُونَ"
}
]